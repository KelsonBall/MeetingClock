<Application x:Class="MeetingClock.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:MeetingClock.Converters"
             xmlns:local="clr-namespace:MeetingClock">
    <Application.Resources>
        <converters:DoubleToCurrencyConverter x:Key="DoubleToCurrencyConverter" />
        <converters:IntToCurrencyConverter x:Key="IntToCurrencyConverter" />
        <Style x:Key="BigText" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontFamily" Value="Courier New" />
            <Setter Property="FontSize" Value="24" />
        </Style>
        <Style x:Key="BigTextBlock" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Courier New" />
            <Setter Property="FontSize" Value="24" />
        </Style>
    </Application.Resources>
</Application>
